<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body style="background-image: url('https://i.ytimg.com/vi/eImZSqyV6Z8/maxresdefault.jpg'); background-size: 100%">
    <embed src="~/Resources/Voice 002_001.m4a" width="180" height="90" loop="true" autostart="true" hidden />
    <div class="navbar navbar-default navbar-fixed-top" style="width: 115%; height: 75px">
        <a href="/">
            <img class="navbar-brand" src="https://kabam1-a.akamaihd.net/pixelkabam/html/swf/FORUM_MARVELCOC_LIVE.png" alt="Logo" style="width: 250px; height: 75px; border: 0;" />
        </a>
        <div class="container" style="padding-left: 20px">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @*@Html.ActionLink("Contest Of Champions", "Index", "Home", new {area = ""}, new {@class = "navbar-brand"})*@
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Summoner", "Index", "Summoner", null, new { style = "padding-top: 25px;font-size: 20px;color:#cc7000" })</li>
                    <li>@Html.ActionLink("Alliance", "Index", "Alliance", new { area = "Alliance" }, new { style = "padding-top: 25px;font-size: 20px;color:#cc7000" })</li>
                    <li>@Html.ActionLink("Champions", "Index", "Home", null, new { style = "padding-top: 25px;font-size: 20px;color:#cc7000" })</li>
                    <li>@Html.ActionLink("Quests", "Index", "Home", null, new { style = "padding-top: 25px;font-size: 20px;color:#cc7000" })</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer class="navbar-fixed-bottom ">
            <p class="navbar-right" style="padding-right: 20px">&copy; @DateTime.Now.Year - NRM Production</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
